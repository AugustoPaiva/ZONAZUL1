<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context="comviewzonazul.google.httpssites.zonazul.usuario.gui.LoginActivity">


    <EditText
        android:id="@+id/login_edtUsuario"
        android:layout_width="215dp"
        android:layout_height="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:background="@color/colorAccent2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <EditText
        android:id="@+id/login_edtSenha"
        android:layout_width="215dp"
        android:layout_height="29dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Senha"
        android:background="@color/colorAccent2"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/login_edtUsuario"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.004" />

    <Button
        android:id="@+id/login_btnEntrar"
        android:layout_width="82dp"
        android:layout_height="26dp"
        android:text="Login"
        android:onClick="logar"
        android:background="@color/colorAccent2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/login_ckbConectado"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="145dp"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não possuí Cadastro?"
        android:textColor="@color/colorAccent2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/login_btnEntrar"
        app:layout_constraintVertical_bias="0.078" />

    <Button
        android:id="@+id/login_btnCadastrar"
        android:layout_width="77dp"
        android:layout_height="26dp"
        android:text="Cadastre-se"
        android:onClick="cadastro"
        android:background="@color/colorAccent2"
        android:textSize="09dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/login_btnEntrar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.084"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.043" />

    <CheckBox
        android:id="@+id/login_ckbConectado"
        android:layout_width="170dp"
        android:layout_height="28dp"
        android:text="Manter-se Conectado"
        android:buttonTint="@color/colorAccent2"
        android:textColor="@color/colorAccent2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/login_edtSenha"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.016" />
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2"
    tools:context="comviewzonazul.google.httpssites.zonazul.cliente.gui.EditarClienteActivity">

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Editar Cliente"
        android:textColor="@color/colorAccent2"
        android:textSize="28dp"
        android:gravity="center"
        android:layout_below="@+id/appBarLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="8dp" />
    <EditText
        android:id="@+id/editnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/colorAccent2"
        android:hint="Nome"
        android:textColorHint="@color/colorAccent2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.368"
        android:layout_below="@+id/textViewNome"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:background="@color/colorAccent2"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="voltar"
        app:layout_constraintTop_toBottomOf="@+id/editcidade"
        android:layout_marginLeft="67dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/salvar_alteracoes"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="17dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="53dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/editnome" />

    <Button
        android:id="@+id/salvar_alteracoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:onClick="alterarcadastro"
        android:background="@color/colorAccent2"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/editcidade"
        android:layout_marginRight="89dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_alignBaseline="@+id/btn_edit"
        android:layout_alignBottom="@+id/btn_edit"
        android:layout_toEndOf="@+id/btn_edit" />

    <EditText
        android:id="@+id/editemail"
        android:textColorHint="@color/colorAccent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/colorAccent2"
        android:hint="Email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintTop_toBottomOf="@+id/editnome"
        android:layout_below="@+id/editnome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <EditText
        android:id="@+id/editcep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:textColor="@color/colorAccent2"
        android:hint="CEP"
        android:textColorHint="@color/colorAccent2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintTop_toBottomOf="@+id/editemail"
        android:layout_below="@+id/editemail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/editnumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:textColor="@color/colorAccent2"
        android:hint="NÃºmero"
        android:textColorHint="@color/colorAccent2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintTop_toBottomOf="@+id/editcep"
        android:layout_below="@+id/editcomplemento"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/editcomplemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/colorAccent2"
        android:hint="Complemento"
        android:textColorHint="@color/colorAccent2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintTop_toBottomOf="@+id/editnumero"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editcep"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editcidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/colorAccent2"
        android:hint="Cidade"
        android:textColorHint="@color/colorAccent2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/editnumero"
        android:layout_alignParentStart="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/user"
        android:id="@+id/foto_usuario"
        android:layout_alignTop="@+id/editnome"
        android:layout_alignEnd="@+id/textViewNome" /> // Sua imagem
    app:civ_border_width="0dp" // Se quiser pode colocar uma borda na imagem tambem
    app:civ_border_color="#FF000000"/>

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent2"
        android:text="Tirar foto"
        android:textColor="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="132dp"
        android:onClick="tirarFoto"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="11dp"
        android:layout_below="@+id/foto_usuario"
        android:layout_alignEnd="@+id/textViewNome" />


</RelativeLayout>

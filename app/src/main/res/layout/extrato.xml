<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    >

    <TextView
        android:id="@+id/tipo"
        android:layout_width="126dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_row="2"
        android:textSize="15dp"
        android:layout_toStartOf="@+id/valor"
        android:layout_weight="1"
        android:text="Boleto"
        android:textColor="@color/colorAccent2"
        app:layout_constraintRight_toLeftOf="@+id/valor"
        android:layout_marginRight="80dp"
        app:layout_constraintLeft_toRightOf="@+id/data"
        android:layout_marginLeft="32dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="22"

        android:layout_row="0"
        android:layout_weight="1"
        android:text="12/12/2017 12:12"
        android:textColor="@color/colorAccent2"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/valor"
        android:layout_width="72dp"
        android:layout_height="23dp"
        android:layout_alignEnd="@+id/data"
        android:layout_alignParentTop="true"
        android:layout_column="5"

        android:layout_row="1"
        android:layout_weight="1"
        android:text="R$100,10"
        android:textColor="@color/colorAccent2"
        android:textSize="15dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
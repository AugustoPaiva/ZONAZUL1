<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2"
    tools:context="comviewzonazul.google.httpssites.zonazul.carro.gui.AdicionarCarro">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Carro"
        android:textSize="30dp"
        android:textColor="@color/colorAccent2"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="29dp"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/fabricante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Fabricante"
        android:textColor="@color/colorAccent2"
        android:textColorHint="@color/colorAccent2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="35dp"
        android:layout_above="@+id/txt_ano"
        android:layout_alignStart="@+id/txt_ano"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/txt_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Modelo"
        android:textColor="@color/colorAccent2"
        android:textColorHint="@color/colorAccent2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="78dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/placa" />

    <EditText
        android:id="@+id/cor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/colorAccent2"
        android:hint="Cor"
        android:textColorHint="@color/colorAccent2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="121dp"
        android:layout_above="@+id/txt_modelo"
        android:layout_alignStart="@+id/txt_modelo"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/txt_ano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/colorAccent2"
        android:inputType="number"
        android:text=""
        android:hint="Ano"
        android:textColorHint="@color/colorAccent2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="164dp"
        android:layout_above="@+id/cor"
        android:layout_alignStart="@+id/cor"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/placa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/colorAccent2"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Placa"
        android:textColorHint="@color/colorAccent2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="207dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/txt_modelo"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="adicionar"

        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="396dp"
        android:onClick="adicionar"
        android:background="@color/colorAccent2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/fabricante"
        android:layout_marginBottom="31dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignStart="@+id/placa"
        android:layout_marginStart="54dp"
        android:onClick="voltar"
        android:text="voltar" />
</RelativeLayout>

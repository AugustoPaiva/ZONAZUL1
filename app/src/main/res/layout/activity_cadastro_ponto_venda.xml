<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comviewzonazul.google.httpssites.zonazul.pontovenda.gui.CadastroPontoVendaActivity"
    android:background="@drawable/fundo2">
    <include layout="@layout/content_cadastro_ponto_venda" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorAccent2"
        android:textColor="@color/colorAccent2"
        android:text=""
        android:hint="Email Institucional"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="75dp"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço do Estabelecimento"
        android:textColor="@color/colorAccent2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="146dp"
        android:layout_above="@+id/txt_cep"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/txt_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Número"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent2"
        android:textColorHint="@color/colorAccent2"/>

    <EditText
        android:id="@+id/txt_complemento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Complemento"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="274dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txt_numero"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent2"
        android:textColorHint="@color/colorAccent2"/>

    <EditText
        android:id="@+id/txt_cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Cidade"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="317dp"
        android:layout_below="@+id/txt_complemento"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:textColor="@color/colorAccent2"
        android:textColorHint="@color/colorAccent2"/>

    <EditText
        android:id="@+id/txt_cep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text=""
        android:hint="CEP"
        android:textColor="@color/colorAccent2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="188dp"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/txt_numero"
        android:layout_alignParentStart="true"
        android:textColorHint="@color/colorAccent2"
        />

    <Button
        android:id="@+id/txt_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="414dp"
        android:layout_alignBaseline="@+id/txt_cadastrar"
        android:layout_alignBottom="@+id/txt_cadastrar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="47dp"
        android:background="@color/colorAccent2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="35dp"
        android:onClick="voltar"/>

    <Button
        android:id="@+id/txt_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cadastrar"

        android:background="@color/colorAccent2"
        android:textColor="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="414dp"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="82dp"
        android:layout_marginEnd="82dp"
        android:onClick="cadastro"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/colorAccent2"
        android:textColor="@color/colorAccent2"
        android:text=""
        android:hint="Registro de Venda"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/txt_email"
        android:layout_alignParentStart="true" />

</RelativeLayout>
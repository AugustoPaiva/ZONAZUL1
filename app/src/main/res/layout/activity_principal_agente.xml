<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2"
    tools:context="comviewzonazul.google.httpssites.zonazul.agentetransito.gui.PrincipalAgenteActivity">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="Verificar placa"
        android:textColor="@color/colorAccent2"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:background="@color/colorAccent2"
        android:onClick="voltar"
        android:text="voltar"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/confirmar"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp"
        android:background="@color/colorAccent2"
        android:onClick="pesquisar"
        android:text="pesquisar"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/plac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/colorAccent2"
        android:hint="Insira a Placa"
        android:textColorHint="@color/colorAccent2"/>

</RelativeLayout>
